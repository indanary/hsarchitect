---
import MainLayout from "../../layouts/MainLayout.astro"
import ProjectDetailContent from "../../components/projects/detail/ProjectDetailContent"

// 1) Tell Astro which /projects/<id> pages to generate
export async function getStaticPaths() {
	// TODO: replace with your real ids (from JSON, content collection, or API)
	const ids = ["1"]
	return ids.map((id) => ({params: {id}}))
}

// 2) Grab the id and pass it down
const {id} = Astro.params
---

<MainLayout title="Project Detail">
	<ProjectDetailContent id={id} client:load />
</MainLayout>
